        "systems/swade/templates/die-sides-options.hbs"}} {{/select}}
      </select>
      <input
        name="data.attributes.spirit.die.modifier"
        type="text"
        value="{{signedString data.data.attributes.spirit.die.modifier}}"
        data-dtype="Number"
      />
    </span>
  </div>
  <div class="attribute" data-attribute="strength">
    <button
      type="button"
      class="attribute-label"
      title="{{localize 'SWADE.Roll'}}"
    >
      {{#if useAttributeShorts}}{{ localize "SWADE.AttrStrShort" }}{{else}}{{ localize "SWADE.AttrStr" }}{{/if}}
    </button>
    <span class="attribute-value flexrow">
      <select
